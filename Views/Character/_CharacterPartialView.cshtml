@model Character
<link rel="stylesheet" type="text/css" href="styles.css" />

@if (Model == null)
{
	<h2>No game provided</h2>
}
else
{

	<div class="p-3 mt-4 mb-4" style="font-size:12px;width:400px;height:400px;background:none;background-image:url('/Images/Viewer/Paper.png');background-size:150% 100%;background-position:center;">
		<div class="row">
			<div class="col" style="margin-left: auto; margin-right: auto; text-align:center;">

				<div class="row mt-2 mb-1">
						<div class="col col-6">
							@if (Model.editable)
							{
							
								<a asp-controller="Character" asp-action="Edit" asp-route-id="@Model.Id"
									class="btn btn-secondary mx-2 text-black" style="width:100px;height:40px;background:border-box;background-image:url('/Images/Viewer/sign.png');background-size:100% 100%;">
									<i class="bi bi-wrench-adjustable-circle"></i> EDIT
								</a>
							}
						</div>
						<div class="col col-6">
							@if (Model.editable)
							{
							<a asp-controller="Character" asp-action="Delete" asp-route-id="@Model.Id"
								class="btn btn-secondary mx-2 text-black" style="width:100px;height:40px;background:border-box;background-image:url('/Images/Viewer/sign.png');background-size:100% 100%;">
								<i class="bi bi-trash"></i> DELETE
							</a>
							}
						</div>
				</div>
				<div class="row mt-2">
					<h1>@Model.Name!.ToUpper()</h1>
					<h3>@Model.RaceType</h3>
					<h3>STR: @Model.Strength || DEX: @Model.Dexterity</h3>
					<h3>CON: @Model.Constitution || INT @Model.Intelligence</h3>
					<h3>WIS: @Model.Wisdom || CHA: @Model.Charisma</h3>
				</div>

			</div>
		</div>
	</div>

}