@model IEnumerable<Character>

<div class="text-center" style="">
	<div class="container" style="margin-top: 15%;background-image:url('../Images/Viewer/NewSign.png');background-repeat:no-repeat;background-position: center center;background-size:75% 200%;">
		<h1 class=" text-light" style="font-size:120px;"><pre></pre>THE PLANES</h1>
	</div>
</div>

<div class="text-center ">

	@if (Model == null || Model.Count() == 0)
	{
		<h2 class="text-light my-5">Sorry! No characters were discovered in The Planes.</h2>
	}
	else
	{
		<h4>@TempData["Success"]</h4>

		<form class="d-flex mt-4 mb-4" asp-controller="Character" asp-action="Search" method="post">
			<input name="key" class="form-control me-2" type="search" placeholder="Search" />
			<button class="btn btn-secondary my-2" type="submit">Search</button>
		</form>

		<div class="row characterViewer" style="">
			@foreach (Character c in Model)
			{
				<div class="col col-3" style="margin-left:6%;">
					<partial name="_CharacterPartialView.cshtml" for="@c" />
				</div>
			}
		</div>
	}
</div>

